{
  "name": "infra",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "cdk": "dotenv -e ../.env -- cdk",
    "synth": "dotenv -e ../.env -- cdk synth",
    "deploy": "pnpm --filter app build && dotenv -e ../.env -- cdk deploy --require-approval never",
    "destroy": "dotenv -e ../.env -- cdk destroy",
    "diff": "dotenv -e ../.env -- cdk diff"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.232.1",
    "constructs": "^10.4.3"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "dotenv-cli": "^7.4.4",
    "typescript": "~5.7.3"
  }
}
