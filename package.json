{
  "name": "toolkit",
  "version": "1.0.0",
  "private": true,
  "description": "Toolkit monorepo with React frontend and CDK infrastructure",
  "scripts": {
    "dev": "pnpm --filter app dev",
    "build": "pnpm --filter app build",
    "lint": "pnpm -r --if-present run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\" --ignore-path .gitignore",
    "prepare": "husky",
    "cdk:synth": "pnpm --filter infra run synth",
    "cdk:deploy": "pnpm --filter infra run deploy",
    "cdk:destroy": "pnpm --filter infra run destroy",
    "cdk:diff": "pnpm --filter infra run diff"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "husky": "^9.1.7",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.6.14"
  }
}
